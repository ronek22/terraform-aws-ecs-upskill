[
  {
    "name": "app",
    "image": "${app_repository_url}:${app_version}",
    "essential": true,
    "workingDirectory": "/flask-deploy",
    "Environment": [
      {
        "Name": "APP_ENV",
        "Value": "Production"
      },
      {
        "Name": "AWS_S3_BUCKET",
        "Value": "${bucket_name}"
      },
      {
        "Name": "DB_APP_URL",
        "Value": "${service_discovery}/db"
      }
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 5000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${app_log_group}",
        "awslogs-stream-prefix": "ecs",
        "awslogs-region": "${region}"
      }
    }
  },
  {
    "name": "nginx",
    "image": "${nginx_repository_url}:${app_version}",
    "essential": true,
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${nginx_log_group}",
        "awslogs-stream-prefix": "ecs",
        "awslogs-region": "${region}"
      }
    },
    "healthCheck": {
      "retries": 3,
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost/s3/health || exit 1"
      ],
      "timeout": 5,
      "interval": 30,
      "startPeriod": 300
    }
  }
]